	author = {Pillinger, Toby and Osimo, Emanuele F. and de Marvao, Antonio and Shah, Mit and Francis, Catherine and Huang, Jian and D'Ambrosio, Enrico and Firth, Joseph and Nour, Matthew M. and McCutcheon, Robert A. and Pardiñas, Antonio F. and Matthews, Paul M. and O'Regan, Declan P. and Howes, Oliver D.},
	month = feb,
	year = {2023},
	pmid = {36632818},
	pages = {98--107},
