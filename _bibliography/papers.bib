@article{bouras_circulating_2022,
	title = {Circulating inflammatory cytokines and risk of five cancers: a {Mendelian} randomization analysis},
	volume = {20},
	copyright = {All rights reserved},
	issn = {1741-7015},
	shorttitle = {Circulating inflammatory cytokines and risk of five cancers},
